<com.nhaarman.triad.tests.firstscreen.FirstScreenView
  android:id="@+id/view_screen_first"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/view_screen_first_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="@string/first" />

  <TextView
    android:id="@+id/view_screen_first_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/view_screen_first_button"
    android:layout_centerHorizontal="true"
    tools:text="0" />

</com.nhaarman.triad.tests.firstscreen.FirstScreenView>